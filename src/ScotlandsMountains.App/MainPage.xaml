<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScotlandsMountains.App.MainPage"
             xmlns:vm="clr-namespace:ScotlandsMountains.App.ViewModels"
             x:DataType="vm:MountainsViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Entry Placeholder="Enter name" Text="{Binding Name}" />

            <Button Text="Add" Command="{Binding AddCommand}" />

            <CollectionView ItemsSource="{Binding MountainNames}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type x:String}">
                        <Label Text="{Binding .}"></Label>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

    

</ContentPage>
